<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.manoranjan.apnadriver">

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.BookingDetailsActivity"
            android:label="Booking Details"
            android:parentActivityName=".Activity.MyDetailsActivity"></activity>
        <activity
            android:name=".Activity.MyAddressActivity"
            android:label="My Address"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.TermsconditionActivity"
            android:label="Terms of Service"
            android:parentActivityName=".Activity.HelpActivity" />
        <activity
            android:name=".Activity.PrivacyPolicyActivity"
            android:label="Privacy Policy"
            android:parentActivityName=".Activity.HelpActivity" />
        <activity
            android:name=".Activity.HelpActivity"
            android:label="Help"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SuburbActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CurrentBookingActivity"
            android:label="My Bookings"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.BookingSummaryActivity"
            android:label="Booking Preview"
            android:parentActivityName=".Activity.CommentActivity" />
        <activity
            android:name=".Activity.CommentActivity"
            android:label="Booking Details"
            android:parentActivityName=".Activity.MyDetailsActivity" />
        <activity
            android:name=".Activity.MyDetailsActivity"
            android:label="Your Details"
            android:parentActivityName=".MainActivity"
            />
        <activity
            android:name=".Activity.HomeDetailsActivity"
            android:label="Home Details"
            android:parentActivityName=".Activity.DriverListActivity" />
        <activity
            android:name=".Activity.DriverListActivity"
            android:label="Select Type of Service"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.AboutUsActivtity"
            android:label="About Us"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.ContactUsActivity"
            android:label="Contact Us"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.ForgotPasswordActivity"
            android:label="Recover Password"
            android:parentActivityName=".Activity.Login" />
        <activity
            android:name=".Activity.MyProfileActivity"
            android:label="My Profile"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Activity.ChatActivity"
            android:label="Chat" />
        <activity
            android:name=".Activity.Signup"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Activity.Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".Activity.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar1"
            tools:ignore="LockedOrientationActivity" />
        <meta-data
            android:name="com.razorpay.ApiKey"
            android:value="rzp_test_BOZdKdWNHZRUkb" />
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>