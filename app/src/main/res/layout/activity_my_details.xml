<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.MyDetailsActivity">

    <ScrollView
        android:layout_above="@id/rr2"
        android:id="@+id/rr1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/fname"
                        android:hint="First name"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/user1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:visibility="gone"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/lname"
                        android:hint="Last name"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/user1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/phoneno"
                        android:hint="Mobile phone number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:drawablePadding="15dp"
                        android:drawableStart="@drawable/ic_call_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:hintEnabled="false"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/emailid"
                        android:inputType="textEmailAddress"
                        android:hint="Email address"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
               <!-- <RelativeLayout
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="8dp"
                        android:src="@drawable/area_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Spinner
                        android:paddingLeft="20dp"
                        android:layout_marginHorizontal="30dp"
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        />
                </RelativeLayout>-->
                <com.google.android.material.textfield.TextInputLayout
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:hintEnabled="false"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/address"
                        android:inputType="textEmailAddress"
                        android:hint="Address"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/area_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>



            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rr2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:textAllCaps="false"
            android:id="@+id/next"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>

</RelativeLayout>