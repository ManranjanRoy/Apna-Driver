<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.MyProfileActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:visibility="gone"
                android:background="@android:color/transparent"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageView
                    android:id="@+id/back"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    app:srcCompat="@drawable/logo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/headname"
                                    android:textStyle="bold"
                                    android:layout_marginTop="10dp"
                                    android:textSize="@dimen/text_sizehead"
                                    android:textColor="@color/white"
                                    android:text="Manoranjan Roy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/heademail"
                                    android:layout_marginTop="0dp"
                                    android:textSize="@dimen/text_size"
                                    android:textColor="@color/white"
                                    android:text="Manoranjan@ventruxinformatics.com"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:paddingLeft="30dp"
                            android:paddingRight="20dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/radiusinput_field"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:padding="2dp"
                                    android:textColor="@color/black"
                                    android:text="First Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:padding="2dp"
                                    android:visibility="visible"
                                    android:id="@+id/textname"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                                <EditText
                                    android:padding="2dp"
                                    android:visibility="gone"
                                    android:id="@+id/editname"
                                    android:layout_width="fill_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/beditname"
                                    app:srcCompat="@drawable/edit_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:visibility="gone"
                            android:paddingLeft="30dp"
                            android:paddingRight="20dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/radiusinput_field"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:padding="2dp"
                                    android:textColor="@color/black"
                                    android:text="Last Name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

