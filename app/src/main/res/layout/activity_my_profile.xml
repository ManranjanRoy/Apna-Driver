                                <EditText
                                    android:padding="2dp"
                                    android:visibility="gone"
                                    android:id="@+id/editemail"
                                    android:layout_width="fill_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:gravity="center_vertical"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/beditemail"
                                    app:srcCompat="@drawable/edit_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:visibility="gone"
                            android:paddingLeft="30dp"
                            android:paddingRight="20dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/radiusinput_field"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:padding="2dp"
                                    android:textColor="@color/black"
                                    android:text="Address "
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:padding="2dp"
                                    android:visibility="visible"
                                    android:id="@+id/textaddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                                <EditText
                                    android:padding="2dp"
                                    android:visibility="gone"
                                    android:id="@+id/editaddress"
                                    android:layout_width="fill_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/beditaddress"
                                    app:srcCompat="@drawable/edit_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:visibility="gone"
                            android:paddingLeft="30dp"
                            android:paddingRight="20dp"
                            android:gravity="center_vertical"
                            android:background="@drawable/radiusinput_field"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:padding="2dp"
                                    android:textColor="@color/black"
                                    android:text="Pincode "
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <TextView
                                    android:padding="2dp"
                                    android:visibility="visible"
                                    android:id="@+id/textpincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:text="p-111 block j new Alipore Kolkata"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                                <EditText
                                    android:padding="2dp"
                                    android:text="Manoranjan Roy"
                                    android:visibility="gone"
                                    android:id="@+id/editpincode"
                                    android:layout_width="fill_parent"
                                    android:layout_height="20dp"
                                    android:backgroundTint="@color/white"
                                    android:inputType="text"
                                    android:textColorHint="@color/black"
                                    android:textSize="@dimen/text_size" />
                            </LinearLayout>
                            <LinearLayout
                                android:gravity="center_vertical"
                                android:layout_alignParentEnd="true"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/beditpincode"
                                    app:srcCompat="@drawable/edit_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>