<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.Signup">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="Create Account,"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Sign Up to get started !"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/fname"
                        android:hint="Name"
                        android:drawablePadding="20dp"
                        android:drawableStart="@drawable/user1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:visibility="gone"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/lname"
                        android:hint="Last name"
                        android:drawablePadding="20dp"
                        android:drawableStart="@drawable/user1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    app:hintEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/phoneno"
                        android:hint="Mobile phone number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:drawablePadding="20dp"
                        android:drawableStart="@drawable/ic_call"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:hintEnabled="false"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/emailid"
                        android:inputType="textEmailAddress"
                        android:hint="Email address"
                        android:drawablePadding="20dp"
                        android:drawableStart="@drawable/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:hintEnabled="false"
                    android:layout_marginTop="5dp"
                   android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@android:color/transparent"
                        android:id="@+id/password"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:drawablePadding="20dp"
                        android:drawableStart="@drawable/pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    app:passwordToggleEnabled="true"
                    app:hintEnabled="false"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:textSize="14dp"
                        android:layout_marginHorizontal="12dp"
                        android:id="@+id/password1"
                        android:background="@android:color/transparent"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:drawablePadding="20dp"
                        android:drawableStart="@drawable/pwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusedByDefault="true"/>

                </com.google.android.material.textfield.TextInputLayout>
                <View
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/grey_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/checkbox"
                        android:textSize="@dimen/text_sizehead"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/boxcolor"
                        android:textColor="@color/boxcolor"
                        android:text="I agree to "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/termsandcondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms "
                        android:textColor="@color/boxcolor"
                        android:textSize="@dimen/text_sizehead"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="and"
                        android:textColor="@color/boxcolor"
                        android:textSize="@dimen/text_sizehead"
                        />

                    <TextView
                        android:textStyle="bold"
                        android:id="@+id/privacypolicy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Privacy policy"
                        android:textColor="@color/boxcolor"
                        android:textSize="@dimen/text_sizehead" />
                </LinearLayout>
                <Button
                    android:layout_marginTop="20dp"
                    android:id="@+id/buttonsignup"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/login_btn"
                    android:text="Continue"
                    android:textColor="@android:color/white" />


                <TextView
                    android:visibility="gone"
                    android:id="@+id/forgot_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Forgot Password?"
                    android:textColor="@color/textcolor"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account?"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/signup_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sign In"
                        android:textColor="@color/boxcolor"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>